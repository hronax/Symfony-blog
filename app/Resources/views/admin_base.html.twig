<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html"
    ; charset=utf-8" />
    <title>{% block title %}symfony-blog{% endblock %} - symfony-blog backend</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% block stylesheets %}
        {% stylesheets
        'css/admin.css'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<section id="wrapper">
    <header id="header">
        <hgroup>
            <h2>{% block blog_title %}<a href="#">admin panel</a>{% endblock %}</h2>

            <h3>{% block blog_tagline %}<a href="#">of symfony-blog</a>{% endblock %}</h3>
        </hgroup>
    </header>
    <aside class="sidebar">
        {% block sidebar %}{% endblock %}
    </aside>
    <section class="main-col">
        {% block body %}{% endblock %}
    </section>

    <div id="footer">
        {% block footer %}

        {% endblock %}
    </div>
</section>

{% block javascripts %}{% endblock %}
</body>
</html>