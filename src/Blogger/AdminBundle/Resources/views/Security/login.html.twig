{% extends 'BloggerAdminBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@BloggerAdminBundle/Resources/public/css/login.css'
    filter='?yiu_css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    {% if error %}
        <div id="login_error">{{ error.message }}</div>
    {% endif %}
    <form action="{{ path('login_check') }}" method="post">
        <div id="block">
            <label id="user" for="username">p</label>
            <input type="text" id="username" name="_username"  placeholder="Username" value="{{ last_username }}" />

            <label id="pass" for="password">k</label>
            <input type="password" id="password" name="_password" placeholder="Password" />
            <input type="submit" id="submit" name="submit" value="a"/>
        </div>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
        <div id="option">
            <p>Sign in</p>
            <a href="#">forgot?</a>
        </div>
    </form>
{% endblock %}
{%  block sidebar %}
{% endblock %}
